version: '2'

services:

    # Jury UI Service
    domserver: 
        image: daavar/domserver
        links:
           - mysql
        environment:
           - VIRTUAL_HOST=
           - MYSQL_HOST=mysql
           - MYSQL_DATABASE=
           - MYSQL_USER=
           - MYSQL_PASSWORD=
        network_mode: bridge
        restart: always

    # Judgehosts service
    judgehost: 
        image: daavar/judgehost
        links:
           - domserver
        environment:
           - API_URL=http://domserver/api/
           - API_USER=judgehost
           - API_PASSWORD=
        network_mode: bridge
        restart: always

    # Mysql database
    mysql:
       image: mariadb
       environment:
          - MYSQL_ROOT_PASSWORD=
       volumes:
          - ./data/mysql:/var/lib/mysql 
       network_mode: bridge
       restart: always
    
    # Phpmyadmin
    phpmyadmin:
       image:  phpmyadmin/phpmyadmin
       environment:
         - ABSOLUTE_URI=http://pma
         - VIRTUAL_HOST=pma
         - UPLOAD_SIZE=1G
         - PMA_HOST=mysql
       links:
         - mysql
       network_mode: bridge
       restart: always